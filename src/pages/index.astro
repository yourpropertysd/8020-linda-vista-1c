---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION } from '../consts';
import '../styles/home.css';
const pageTitle = '8020 Linda Vista Rd, Unit 1C - San Diego';
const imageModules = import.meta.glob('./images/*.{jpg,jpeg,png,webp}', { eager: true });
const gallerySizePattern = ['large', 'medium', 'medium', 'small', 'small'] as const;
const formatImageLabel = (filePath: string) =>
	filePath
		.split('/')
		.pop()
		?.replace(/\.[^.]+$/, '')
		.replace(/[_-]+/g, ' ')
		.replace(/([a-z])([A-Z])/g, '$1 $2')
		.replace(/(\D)(\d+)/g, '$1 $2')
		.replace(/\s+/g, ' ')
		.trim()
		.replace(/\b\w/g, (char) => char.toUpperCase()) ?? 'Gallery Image';
const galleryImages = Object.entries(imageModules)
	.sort(([leftPath], [rightPath]) => leftPath.localeCompare(rightPath))
	.map(([path, moduleValue], index) => {
		const imageValue = (moduleValue as { default: { src: string } | string }).default;
		const src = typeof imageValue === 'string' ? imageValue : imageValue.src;
		const label = formatImageLabel(path);
		return {
			src,
			label,
			alt: label,
			sizeClass: gallerySizePattern[index % gallerySizePattern.length]
		};
	});
